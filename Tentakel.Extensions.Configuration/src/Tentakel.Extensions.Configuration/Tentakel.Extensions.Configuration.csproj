<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup Label="Globals">
    <SccProjectName>SAK</SccProjectName>
    <SccProvider>SAK</SccProvider>
    <SccAuxPath>SAK</SccAuxPath>
    <SccLocalPath>SAK</SccLocalPath>
  </PropertyGroup>

  <PropertyGroup>
    <Company>Joyson Safety Systems Sachsen GmbH</Company>
    <AssemblyVersion>5.5.278.1431</AssemblyVersion>
    <FileVersion>5.5.278.1431</FileVersion>
    <Copyright>Copyright © Tentakel 2021</Copyright>
    <Version>5.0.0</Version>
    <TargetFramework>net5.0</TargetFramework>
    <SignAssembly>true</SignAssembly>
    <DelaySign>false</DelaySign>
    <AssemblyOriginatorKeyFile>Tentakel.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>


  <PropertyGroup>
    <dayOfYear>$([System.DateTime]::Now.DayOfYear)</dayOfYear>
    <revisionIdx>$([System.DateTime]::Now.ToString("HHmm"))</revisionIdx>

    <git-repository>$([MSBuild]::GetDirectoryNameOfFileAbove($(SolutionDir), ".git\\HEAD"))</git-repository>
    <git-branch Condition="'$(git-repository)' != ''">$([System.IO.File]::ReadAllText("$(git-repository)\\.git\\HEAD").Trim().Replace("ref: refs/heads/", ""))</git-branch>

    <AssemblyVersion Condition="'$(git-branch)' != ''">5.0.$(dayOfYear).$(revisionIdx)</AssemblyVersion>
    <FileVersion Condition="'$(git-branch)' != ''">5.0.$(dayOfYear).$(revisionIdx)</FileVersion>

    <OutputPath Condition="'$(git-branch)' != ''">$(git-repository)\$(git-branch)\bin1\$(Configuration)</OutputPath>
  </PropertyGroup>


  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Abstractions" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="5.0.0" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="5.0.0" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="$(ProjectDir)_build.cmd" />
  </Target>

</Project>
